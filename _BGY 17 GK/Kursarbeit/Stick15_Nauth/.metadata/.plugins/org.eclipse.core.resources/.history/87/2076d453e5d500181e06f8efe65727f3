import java.util.*;
public class Aufgabe_1 {

	public static void main(String[] args) {
	System.out.println("Geben Sie eine Zahl ein!");
	Scanner eingabe= new Scanner(System.in);
	int x=eingabe.nextInt();
	int y;
	int c= x%2;
	if (c>0) {
		for (y=0; y<=x; y++) {
		y=y+x;
	}
System.out.print(y);
	}

}
}